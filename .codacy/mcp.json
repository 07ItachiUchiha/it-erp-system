{
    // Codacy MCP Configuration
    "version": "1.0.0",
    "provider": "gh",
    "organization": "07ItachiUchiha",
    "repository": "it-erp-system",
    "analysis": {
        "enabled": true,
        "autoAnalyze": true,
        "includePaths": [
            "**/*"
        ],
        "excludePaths": [
            "node_modules/**",
            "dist/**",
            "build/**",
            ".git/**",
            "logs/**",
            "coverage/**",
            "tmp/**",
            ".next/**",
            "public/assets/**"
        ]
    },
    "tools": {
        "trivy": {
            "enabled": true
        },
        "eslint": {
            "enabled": true
        },
        "sonarjs": {
            "enabled": true
        },
        "bandit": {
            "enabled": true
        }
    },
    "notifications": {
        "enabled": true,
        "onIssuesFound": true,
        "onAnalysisComplete": true,
        "channels": {
            "slack": false,
            "email": true
        }
    },
    "quality": {
        "enabledMetrics": [
            "coverage",
            "duplication",
            "issues",
            "complexity"
        ]
    }
}